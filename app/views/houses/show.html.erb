</div>
<% end -%>

<% unless @house.behavior_plans == House::DEFAULT_FIELD_TEXT -%>
<h3>Behavior Plans</h3>
<div id="behavior_plans">
<p><%= @house.behavior_plans %></p>
</div>
<% end -%>

<% unless @house.individuals.empty? -%>
<h3>Individuals</h3>
<div id="individuals">
<div id="individuals_detail">
<%= render :partial => 'individuals', :object => @house.individuals, :locals => {:house_id => @house.id} %>
</div>
</div>
<% end -%>

<% unless @house.phone_numbers == House::DEFAULT_FIELD_TEXT -%>
<h3>Phone Numbers</h3>
<div id="phone_numbers">
<p><%= @house.phone_numbers %></p>
</div>
<% end -%>