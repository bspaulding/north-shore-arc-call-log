<h1>Listing people</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Nickname</th>
    <th>Home phone</th>
    <th>Mobile phone</th>
    <th>Email address</th>
    <th>Gender</th>
    <th>Address street</th>
    <th>Address city</th>
    <th>Address state</th>
    <th>Address zip</th>
    <th>Doh</th>
  </tr>

<% for person in @people %>
  <tr>
    <td><%=h person.first_name %></td>
    <td><%=h person.last_name %></td>
    <td><%=h person.nickname %></td>
    <td><%=h person.home_phone %></td>
    <td><%=h person.mobile_phone %></td>
    <td><%=h person.email_address %></td>
    <td><%=h person.gender %></td>
    <td><%=h person.address_street %></td>
    <td><%=h person.address_city %></td>
    <td><%=h person.address_state %></td>
    <td><%=h person.address_zip %></td>
    <td><%=h person.doh %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

