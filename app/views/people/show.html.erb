<div id="profile">

<div id="title"><%= @person.name %> <% unless @person.nickname.nil? %>(<em>"<%= @person.nickname %>"</em>)<% end %></div>

<img src="/images/profile_no_image.jpg" width="200px" height="200px" class="profile_picture">

<div id="profile_detail">

<p><b>Gender:</b> <%= @person.gender.capitalize %></p>

<p>
	<b>Hired On:</b><br/>
	<%= @person.doh.strftime("%B %d, %Y") %>
</p>

<p>
	<b>Email:</b><br/>
	<%= @person.email_address %>
</p>

<p>
	<b>Home Phone:</b><br/>
	<%= @person.home_phone %>
</p>

<p>
	<b>Mobile Phone:</b><br/>
	<%= @person.mobile_phone %>
</p>

<p>
<b>Address</b><br/>
<%= @person.address_street %><br/>
<%= @person.address_city %>, <%= @person.address_state %> <%= @person.address_zip %>
</p>

<p>
<b>Certifications</b><br/>
<% @person.persons_certifications.each do |pc| %>
<%= pc.certification.name %> - <em><%= pc.expiration_date.strftime("%B %d, %Y") unless pc.expiration_date.nil? %></em><br/>
<% end %>
</p>
</div>

</div>